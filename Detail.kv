#:kivy 1.0.9
#:import SwapTransition kivy.uix.screenmanager.SwapTransition

# Assortment Screen
<Detail_page>:
    size_hint_x: 0.9
    pos_hint: {'center_x': 0.5}
    name: "Product"
    sm: None
    ShadowWidget:
        size_hint:(1,0.53)
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        elevation: 3 
    Image:
        id: image_product
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        source: 'dress_pic4.jpg'  
    Button:
        size_hint: (0.25,0.1)
        pos_hint: {'center_x': 0.25, 'center_y': 0.2}
        text: "Save"
        on_release:
            sm.current = 'Home'
    Button:
        size_hint: (0.25,0.1)
        pos_hint: {'center_x': 0.75, 'center_y': 0.2}
        text: "Discard"
        on_release:
            sm.current = 'Gallery'    