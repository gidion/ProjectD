#:kivy 1.0.9
#file name must end on the name of the app

WindowManager:
    Main_Model_Page:
    Create_model_page:
    Filechooser_Page:

<Main_Model_Page>:
    name: "Main_Model_Page"
    sm : None 
    #temp image
    Image:
        id: model_image
        source: "default.jpg"

        pos_hint: {"x": 0.2, "top": 0.87 }
        #           x   y
        size_hint: 0.6, 0.45
        #on_release:
        #    test()        
    #create/cam
    Button:
        id: 'Create'
        text: "Create Model"
        pos_hint: {"x":0.05, "y": 0.23}
        size_hint: 0.25, 0.15
        background_color: 0.9, 0.8, 0.6, 1
        on_release: 
            root.sm.current =  "Create_model_page"
            #sm.transition.direction = "down"

    #Edit
    Button:
        id: Edit
        text: "Edit"
        #on_release: root.btn()
        pos_hint: {"x":0.375, "y": 0.1}
        size_hint: 0.25, 0.15
        background_color: 0.9, 0.7, 0, 1
        #on_release: root.Check_existing_model()
    #Delete
    Button:
        id: Delete
        text: "Delete"
        on_release: root.Show_delete_popup()
        pos_hint: {"x":0.7, "y": 0.23}
        size_hint: 0.25, 0.15
        background_color: 1, 0, 0, 1
    
<Delete_popup>:
    windw: None 
    Label:
        text: "Are you sure you want to delete your model?"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2,"top": 1}
    Button:
        id: Del_button
        text: "Delete model"
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2,"top": 0.3}
        on_release:
            root.sm.get_screen('Main_Model_Page').Delete_model()
            root.windw.dismiss()


