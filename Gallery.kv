#:kivy 1.0.9
#:import SwapTransition kivy.uix.screenmanager.SwapTransition


<CombSmartTileWithLabel@SmartTileWithLabel>:
    sm: None
    mipmap: True
    product: None
    comb_id: -1
    #subhead doesnt work??
    font_style: "Subtitle1"
    on_release:
        #update detail page, with the selected product info
        self.sm.get_screen("Combination_page").Update_Page(self.product,self.sm,self.comb_id)
        self.sm.current = 'Combination_page'
    tile_text_color: (1,1,1,0.6)

<Gallery_page>:
    name: "Gallery"
    sm : None            

    BoxLayout:
        orientation: "vertical"

    # Make a toolbar with 100% transparency, and 0 shadow.
    # Workaround because original bar disappears behind pictures, fix later
        MDToolbar:
            md_bg_color: 1,1,1,0
            elevation: 0
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: Items_Grid
                cols: 2
                row_default_height:
                    (self.width - self.cols*self.spacing[0])/self.cols
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height
                padding: dp(4), dp(4)
                spacing: dp(4)               
