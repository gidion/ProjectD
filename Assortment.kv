        MDToolbar:
            md_bg_color: 1,1,1,0
            elevation: 0

        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 2
                row_default_height:
                    (self.width - self.cols*self.spacing[0])/self.cols
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height
                padding: dp(4), dp(4)
                spacing: dp(4)

