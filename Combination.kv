#:kivy 1.0.9
#:import SwapTransition kivy.uix.screenmanager.SwapTransition

# Assortment Screen
<Combination_page>:
    size_hint_x: 0.9
    pos_hint: {'center_x': 0.5}
    name: "Combination_page"
    sm: None
    product: None
    comb_id: -1
    ShadowWidget:
        size_hint:(1,0.53)
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        elevation: 3 
    
    MDLabel:
        id: Product_name
        pos_hint: {'center_x':0.5, 'center_y':0.9}
        text: "Productname"
        color: (0,0,0,1)
    MDLabel:
        id: Product_text
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        text: "Description"
        color: (0,0,0,0.7) 
    Image:
        id: image_product
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        source: 'dress_pic4.jpg'  
    Button:
        size_hint: (0.25,0.1)
        pos_hint: {'center_x': 0.25, 'center_y': 0.07}
        text: "Check in store"
        on_release:
            root.To_store(root.product.link)
    Button:
        size_hint: (0.25,0.1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.07}
        text: "Go Back"
        on_release:
            root.sm.current = 'Gallery'  
    Button:
        size_hint: (0.25,0.1)
        pos_hint: {'center_x': 0.75, 'center_y': 0.07}
        text: "Delete"
        on_release:
            root.Show_delete_popup_combination()
            #root.sm.current = 'Gallery'

<Delete_popup_combination>:
    windw: None 
    Label:
        text: "Are you sure you want to \n delete your combination?"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2,"top": 1}
    Button:
        id: Del_button
        text: "Delete model"
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2,"top": 0.3}
        on_release:           
            root.sm.get_screen('Combination_page').Delete_Combination(root.sm.get_screen('Combination_page').product, root.sm.get_screen('Combination_page').ids.image_product.source, root.sm.get_screen('Combination_page').comb_id)
            root.windw.dismiss()            